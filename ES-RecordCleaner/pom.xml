<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>asc-etl-storage-recordmanagement</artifactId>
		<groupId>com.bah.na.asc</groupId>
		<version>4-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>

	<artifactId>asc-etl-storage-recordmanagement-elasticsearch</artifactId>
	<groupId>com.bah.na.asc</groupId>
<!--NOTE: Please do not modify below. Ask Cedar for modification. -->
		<version>4-SNAPSHOT</version>
		<!-- End of NOTE -->
	<name>ASC - Storage Record Management Elasticsearch</name>
	<description>Elasticsearch scanner</description>
	<packaging>jar</packaging>


	<dependencies>
		<dependency>
			<groupId>com.bah.na.asc</groupId>
			<artifactId>asc-core-system</artifactId>
		</dependency>
		<dependency>
			<groupId>com.bah.na.asc</groupId>
			<artifactId>asc-test-common</artifactId>
		</dependency>
		<dependency>
			<groupId>com.bah.na.asc</groupId>
			<artifactId>asc-etl-storage-core</artifactId>
			<version>4-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.elasticsearch</groupId>
			<artifactId>elasticsearch</artifactId>
			<version>${elasticsearch.version}</version>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<outputDirectory>${session.executionRootDirectory}/target/build</outputDirectory>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<manifestEntries>
										<Specification-Title>Analytical Services Contract</Specification-Title>
										<Specification-Vendor>Booz Allen Hamilton</Specification-Vendor>
										<Specification-Version>${project.version}</Specification-Version>
										<Implementation-Title>com.bah.na.asc</Implementation-Title>
										<Implementation-Vendor>Booz Allen Hamilton</Implementation-Vendor>
										<Implementation-Version>${project.version}</Implementation-Version>
									</manifestEntries>
								</transformer>

								<transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />

							</transformers>
							<createDependencyReducedPom>false</createDependencyReducedPom>
							<minimizeJar>false</minimizeJar>
							<finalName>asc-datastorage-record-management-elasticsearch-${project.version}-everything</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
